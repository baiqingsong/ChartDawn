<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump to Line Chart"
        android:onClick="jumpToLineChart"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump to Bar Chart"
        android:onClick="jumpToBarChart"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump to Horizontal Bar Chart"
        android:onClick="jumpToHorizontalBarChart"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump to Pie Chart"
        android:onClick="jumpToPieChart"/>

</LinearLayout>
